    #include <stdio.h>
    void main()
    {
 
        int i, j, a, n, number[30];
        printf("Enter the number of processors=");
        scanf("%d", &n);
        for (i = 0; i < n; ++i)
        {
            printf("%d processor burst time = ",i);
            scanf("%d", &number[i]);
        }
        for (i = 0; i < n; ++i) 
        {
            for (j = i + 1; j < n; ++j)
            {
                if (number[i] < number[j]) 
                {
                    a =  number[i];
                    number[i] = number[j];
                    number[j] = a;
                }
            }
        }
        printf("the processors are re sheduled according to the highest execuationn time \n");
        for (i = 0; i < n; ++i)
            printf("%d\n", number[i]);
 
    }
